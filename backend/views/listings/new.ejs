<% layout('layouts/boilerplate')-%>
<body>
    <h2>New Listing</h2>
    <form action="/listings" method="post">
        <label for="title">Title: </label>
        <input type="text" placeholder="enter title" name="listing[title]" id="title">
        <br>
        <br>
        <label for="description">Description: </label>
        <textarea type="text" placeholder="enter description" name="listing[description]" id="title"></textarea>
        <br>
        <br>
        <label for="image">Image: </label>
        <input type="text" placeholder="enter image URL/Link" name="listing[image]" id="image">
        <br>
        <br>
        <label for="price">Price: </label>
        <input type="number" placeholder="enter price" name="listing[price]" id="price">
        <br>
        <br>
        <label for="location">Location: </label>
        <input type="text" placeholder="enter location" name="listing[location]" id="location">
        <br>
        <br>
        <label for="country">Country: </label>
        <input type="text" placeholder="enter country" name="listing[country]" id="country">
        <br>
        <br>
        <button>Submit</button>
    </form>
</body>
